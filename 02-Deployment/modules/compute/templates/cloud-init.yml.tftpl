#cloud-config
users:
  - name: ${ssh_username}
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
      - ${ssh_public_key}

package_update: true
package_upgrade: false

packages:
%{ for package in packages ~}
  - ${package}
%{ endfor ~}

runcmd:
%{ for cmd in run_commands ~}
  - ${cmd}
%{ endfor ~}
